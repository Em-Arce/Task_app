<h1>Categories</h1>
<ul>
<% @categories.each do |category| %>
  <li>
    <%= category.name %>
    <%= link_to 'Show', category %>
    <%= link_to 'Edit', edit_category_path(category) %>
    <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %>
  </li>
<% end %>
</ul>
<div>
  <%= link_to 'Create Category', new_category_path %>
</div>



