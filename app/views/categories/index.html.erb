<h1>Categories</h1>

<% @categories.each do |category| %>
  <div>
    <img src=<%= category.image_url %> alt="No image available" width="300rem" height="300rem">
      <%= link_to category.name, category %><br>
      <%= link_to 'Edit', edit_category_path(category) %>
      <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<div>
  <%= link_to 'Create Category', new_category_path %>
</div>



