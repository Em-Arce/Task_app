<div class="d-flex">
  <div class="tasks-container card shadow p-3 mb-5 bg-body rounded">
    <div class="title">
      <h2>Tasks</h2>
      <div class="btn-due">
        <%= link_to 'Due Today', category_tasks_path(@category, @task), class: "btn btn-purple" %>
      </div>
    </div>
    <%= render "tasks/index" %>
  </div>
  <div>
  <div class="category-sidebar card shadow p-3 mb-5 bg-body rounded d-flex justify-content-center">
    <div class="category-items flex-column">
      <div class="d-flex justify-content-center">
        <img src=<%= @category.image_url %> alt="No image available" id="category-image">
      </div>
      <div class="title">
        <h1><%= @category.name %></h1>
      </div>
      <div class="d-flex justify-content-center">
        <div class="progress">
          <div class="progress-bar btn-purple" role="progressbar" style="width: <%= percent_progress(@category.id) %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
            <%= percent_progress(@category.id) %>%
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <div class="category-button-container d-flex justify-content-evenly">
        <%= link_to "Edit", edit_category_path(@category), class: "btn btn-purple" %>
        <%= link_to "Back", categories_path, class: "btn btn-danger" %>
        <%= link_to 'Delete', @category, id: "delete", class: "btn btn-danger",
                        method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div> 
  </div>
  <div class="task-sidebar card shadow p-3 mb-5 bg-body rounded">
    <%= render 'tasks/form' %>
  </div>
  </div>
</div>




