<%= form_with model: @category do |f| %>
  <div id="single_category">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <% @category.errors.full_messages_for(:name).each do |message| %>
      <div class="text-warning"><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= f.label :image %><br>
    <%= f.text_field :image_url %><br>
    <% @category.errors.full_messages_for(:image_url).each do |message| %>
      <div class="text-warning"><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
