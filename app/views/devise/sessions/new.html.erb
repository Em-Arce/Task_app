<div class="d-flex justify-content-center">
    <div class="card flex-column shadow p-3 mb-5 bg-body rounded" style="width: 28rem;">
        <div class="form-container">
            <div class="title">
              <h2>Log in</h2>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-floating mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "user_email", placeholder: "Email" %>
                <label for="floatingInput">Email</label>
              </div>

              <div class="form-floating mb-4">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "user_password", placeholder: "Password" %>
                <label for="floatingInput">Password</label>
              </div>

              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-purple" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>