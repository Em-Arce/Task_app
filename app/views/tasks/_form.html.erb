<%= form_with model: [ @category, @category.tasks.build ] do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <% @category.errors.full_messages_for(:name).each do |message| %>
      <div class="text-warning"><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_field :description %><br>
    <% @category.errors.full_messages_for(:description).each do |message| %>
      <div class="text-warning"><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= f.label :priority  %>
    <span>(1:High, 2: Medium, 3:Low)</span><br>
    <%= f.number_field :priority, in: 1.0..3.0, step: 1 %><br>
    <% @category.errors.full_messages_for(:priority).each do |message| %>
      <div class="text-warning"><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= f.label :deadline %><br>
    <%= f.datetime_local_field :deadline %><br>
    <% @category.errors.full_messages_for(:deadline).each do |message| %>
      <div class="text-warning"><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= f.label :completed %><br>
    <%= f.select :completed, ['true', 'false'], selected: 'false' %><br>
    <% @category.errors.full_messages_for(:completed).each do |message| %>
      <div class="text-warning"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
